<h2><%= t('opt_out_requests.index.title') %></h2>

<div class="table-responsive">
  <table class='table'>
    <thead>
      <tr>
        <th>ID</th>
        <th style="width: 15%"><%= t('activerecord.attributes.opt_out_request.name') %></th>
        <th style="width: 20%"><%= t('activerecord.attributes.opt_out_request.address') %></th>
        <th><%= t('activerecord.attributes.opt_out_request.meta_data') %></th>
        <th style="width: 20%"><%= t('activerecord.attributes.opt_out_request.created_at') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @opt_out_requests.each do |r| %>
        <tr>
          <td><%= r.id %></td>
          <td><%= r.name %></td>
          <td>
            <%= r.street_address %><br />
            <%= r.city %>, <%= r.state %> <%= r.postal_code %>
          </td>
          <td><%= r.meta_data %></td>
          <td><%= r.created_at %></td>
          <td>
            <%= link_to 'Destroy', r, method: :delete, data: { confirm: t('opt_out_requests.flash.destroy_confirm') } %>
          </td>
        </tr>
      <% end%>
    </tbody>
  </table>
</div>

<%= paginate @opt_out_requests %>
