<div>
  <% flash.each do |type, msg| %>
    <div class="alert <%= bootstrap_class_for_flash(type) %> alert-dismissable fade show">
      <%= msg %>
      <% if flash_message_is_cookie_info(msg) && cookies[:saw_cookie_notice] == nil %>
        <%= link_to('X', saw_cookie_notice_path, method: :post, class: 'float-right') %>
      <% else %>
        <button class="close" data-dismiss="alert">x</button>
      <% end %>
    </div>
  <% end %> 
</div>