<%= form_with model: @contact_request, 
              class: 'form',
              method: 'POST',
              local: true,
              url: '/contact-us' do |f| %>
  <% if @contact_request.errors.any? %>
    <div class="form-errors">
        <h4><%= pluralize(@contact_request.errors.count, "error") %> stopped you from sending contact request:</h4>
        <% @contact_request.errors.full_messages.each do |msg| %>
          <ul>
            <li><%= msg %></li>
          </ul>
        <% end %>
    </div>
  <% end %>
  <div class='form-group col-md-6'>
    <%= label(:contact_request, :name, class: 'required') %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>
  <div class='form-group col-md-6'>
    <%= label(:contact_request, :email_address, nil, class: 'required') %>
    <%= f.text_field :email_address, class: 'form-control', required: true %>
  </div>
  <div class='form-group col-md-6'>
    <%= label(:contact_request, :telephone) %>
    <%= f.text_field :telephone, class: 'form-control' %>
  </div>
  <div class='form-group col-md-6'>
    <%= label(:contact_request, :comments) %>
    <%= f.text_area :comments, class: 'form-control', placeholder: t('public.contact_us.form.comments.placeholder') %>
  </div>
  <div class='form group'>
    <%= hcaptcha_tags %>
  </div>
  <%= submit_tag t('public.contact_us.form.submit'), class: 'btn btn-primary' %>
<% end %>