<%= form_with model: @contact_request, 
              class: 'form',
              method: 'POST',
              local: true,
              url: '/contact-us' do |f| %>
  <% if @contact_request.errors.any? %>
    <div class="form-errors">
        <h4><%= pluralize(@contact_request.errors.count, "error") %> stopped you from sending contact request:</h4>
        <% @contact_request.errors.full_messages.each do |msg| %>
          <ul>
            <li><%= msg %></li>
          </ul>
        <% end %>
    </div>
  <% end %>
  <div class='form-group col-md-6'>
    <%= label_tag(:name) %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>
  <div class='form-group col-md-6'>
    <%= label_tag(:email_address) %>
    <%= f.text_field :email_address, class: 'form-control', required: true %>
  </div>
  <div class='form-group col-md-6'>
    <%= label_tag(:telephone) %>
    <%= f.text_field :telephone, class: 'form-control' %>
  </div>
  <div class='form-group col-md-6'>
    <%= label_tag(:comments) %>
    <%= f.text_area :comments, class: 'form-control', placeholder: 'Max 500 characters.' %>
  </div>
  <div class='form group'>
    <%= hcaptcha_tags %>
  </div>
  <%= submit_tag 'Submit', class: 'btn btn-primary' %>
<% end %>